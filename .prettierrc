{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
      "files": "*.ts",
      "options": {
        "useTabs": false,
        "semi": true,
        "tabWidth": 2,
        "bracketSpacing": true,
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 120,
        "arrowParens": "always"
      }
    }
  ]
}
